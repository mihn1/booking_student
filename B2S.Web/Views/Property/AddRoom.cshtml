@model B2S.Core.Entities.Room
@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/Shared/_B2SPopup.cshtml";
}


<div class="row">
    <div class="col-md-12">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="RoomId" />
        <input type="hidden" asp-for="BuildingId" />
        <input type="hidden" asp-for="PropertyId" />
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RoomName" class="control-label"></label>
                    <input asp-for="RoomName" class="form-control">
                    <span asp-validation-for="RoomName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="RoomTypeId" class="control-label"></label>
                    <select asp-for="RoomTypeId" class="form-control" asp-items="ViewBag.RoomTypeId">
                        <option value="">-Select-</option>
                    </select>
                    <span asp-validation-for="RoomTypeId" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
