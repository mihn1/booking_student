@model B2S.Core.Entities.EmailTemplate
@inject B2S.Infrastructure.Data.AppDbContext   _context;

@{
    ViewData["Title"] = "Email Template Details";
    ViewData["Name"] = "Email Template";
    Layout = "~/Views/Shared/_B2SDetails.cshtml";
    ViewData["EntityIcon"] = "fa fa-envelope-o";
}



<div class="row">
    <div class="col-md-9">
        <!-- Default box -->
        <div class="box box-primary">
            <div class="box-body">
                <div>
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.TemplatName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TemplatName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Description)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.Subject)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Subject)
                        </dd>
                        <dt>
                            @Html.DisplayName("Body")
                        </dt>
                        <dd>
                            <div class="box box-default">
                                <div class="box-body">
                                    @Html.Raw(Model.BodyHTML)
                                </div>
                            </div>
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.IsPublished)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.IsPublished)
                        </dd>
                    </dl>
                </div>
            </div>
            <!-- /.box-body -->
            <div class="box-footer">
                <div class="form-group">
                    <a asp-action="Edit" asp-route-id="@Model.EmailTemplateId" class="btn btn-primary">Edit</a>
                    <a asp-action="Index" class="btn btn-default">Back to List</a>
                </div>
            </div>
            <!-- /.box-footer-->
        </div>
        <!-- /.box -->
    </div>
    <div class="col-md-3">
    </div>
</div>



