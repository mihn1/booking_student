            $.ajax({
                type: 'POST',
                url: url,
                data: data,
                contentType: 'application/json',
                success: function (data) {
                    if (data.success) {
                        ShowMessage(data.message);
                        tblNoteList.ajax.reload();
                        $("#des").val('');
                    } else {
                        ShowMessageError(data.message);
                    }
                }
            });
        })

