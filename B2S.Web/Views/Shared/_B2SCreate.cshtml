<!DOCTYPE html>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject B2S.Infrastructure.Data.AppDbContext Context
@{

    User appUser = await UserManager.GetUserAsync(User);
    string name = ViewData["Name"] as string;
    string entityIcon = ViewData["EntityIcon"] as string;

}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @await Html.PartialAsync("_B2SBasicStyles")

    @RenderSection("Styles", required: false)

</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @await Html.PartialAsync("_B2SMainHeader", appUser)
        <!-- Left side column. contains the logo and sidebar -->
        @await Html.PartialAsync("_B2SMainSidebar", appUser)
        <!-- Content Wrapper. Contains page content -->
        <form asp-action="Create" name="frm-create" method="post" enctype="multipart/form-data">
            <div class="content-wrapper">
                <!-- Content Header (Page header) -->
                <section class="content-header">
                    <h1>
                        <i class="@entityIcon text-primary"></i> New @name
                    </h1>
                </section>
                <!-- Main content -->
                <section class="content">
                    <div class="row">
                        <div class="col-md-9">
                            <!-- Default box -->
                            <div class="box box-primary">

                                <div class="box-body">                                   
                                    @RenderBody()
                                </div>
                                <!-- /.box-body -->
                                <div class="box-footer">
                                    <div class="form-group">
                                        <input type="submit" value="Create" class="btn btn-primary" />
                                        <a asp-action="Index" class="btn btn-default">Back to List</a>
                                    </div>
                                </div>
                                <!-- /.box-footer-->
                            </div>
                            <!-- /.box -->
                        </div>
                        @*<div class="col-md-3">
                            <div class="callout callout-info" style="margin-bottom: 0!important;">
                                <h4><i class="fa fa-info"></i> Info:</h4>
                                <p>
                                    @ViewBag.CreateInfo
                                </p>
                            </div>
                        </div>*@
                    </div>
                   
                </section>
                <!-- /.content -->
            </div>
        </form>
        
        <!-- /.content-wrapper -->
        @await Html.PartialAsync("_B2SFooter")

    </div>
    <!-- ./wrapper -->

    @await Html.PartialAsync("_B2SBasicScripts")

    @RenderSection("Scripts", required: false)

</body>
</html>
