<!DOCTYPE html>
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager
@inject B2S.Infrastructure.Data.AppDbContext Context
@{

    User appUser = await UserManager.GetUserAsync(User);
    string controller = (string)ViewContext.RouteData.Values["controller"];
    string listTitle = ViewData["ListTitle"] as string;
    string entityIcon = ViewData["EntityIcon"] as string;
    string name = ViewData["Name"] as string;
}
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <title>@ViewData["Title"]</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    @await Html.PartialAsync("_B2SBasicStyles")

    @RenderSection("Styles", required: false)
    <style>
        .dropdown.dropdown-lg .dropdown-menu {
            margin-top: -1px;
            padding: 4px 15px;
        }

        .btn-group .btn {
            border-radius: 0;
            margin-left: -1px;
        }

        .form-horizontal .form-group {
            margin-left: 0;
            margin-right: 0;
        }

        @@media screen and (min-width: 568px) {
            #boot-search-box {
                width: 350px;
                margin: 0 auto;
            }

            .dropdown.dropdown-lg {
                position: static !important;
            }

                .dropdown.dropdown-lg .dropdown-menu {
                    min-width: 350px;
                }
        }
    </style>
</head>
<body class="hold-transition skin-blue fixed sidebar-mini">
    <div class="wrapper">
        @await Html.PartialAsync("_B2SMainHeader", appUser)
        <!-- Left side column. contains the logo and sidebar -->
        @await Html.PartialAsync("_B2SMainSidebar", appUser)
        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            <section class="content">
                <div class="row">
                    @*<div class="col-md-3">
                        <a asp-action="Create" class="btn btn-primary btn-block margin-bottom"><i class="@entityIcon"></i> <span>New @controller</span></a>
                        @RenderSection("ListBox", required: false)
                    </div>*@
                    <!-- /.col -->
                    <div class="col-md-12">

                        <div class="box box-primary">
                            <div class="box-header with-border">
                                <h3 class="box-title"><i class="@entityIcon text-primary"></i><span> @name</span></h3>
                                <div class="col-md-8 pull-right">
                                    @RenderSection("SearchBox", required: false)
                                </div> 
                            </div>
                            <!-- /.box-header -->
                            <div class="box-body no-padding">
                                <div class="mailbox-controls">
                                    @*<div class="text-center">
                                        <button type="button" id="btn-export-excel" class="btn btn-success btn-sm"><i class="fa fa-file-excel-o"></i></button>
                                        <button type="button" id="btn-export-pdf" class="btn btn-danger btn-sm"><i class="fa fa-file-pdf-o"></i></button>
                                        <button type="button" id="btn-export-csv" class="btn btn-primary btn-sm"><i class="fa fa-file-text-o"></i></button>
                                    </div>*@
                                </div>
                                <div class="table-responsive mailbox-messages">
                                    @RenderBody()
                                    <!-- /.table -->
                                </div>
                                <!-- /.mail-box-messages -->
                            </div>
                            <!-- /.box-body -->
                            <div class="box-footer no-padding">

                            </div>
                        </div>
                        @*<div class="callout callout-info" style="margin-bottom: 0!important;">
                            <h4><i class="fa fa-info"></i> Info:</h4>
                            <p>
                                @ViewBag.IndexInfo
                            </p>
                        </div>*@
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        @await Html.PartialAsync("_B2SFooter")

    </div>
    <!-- ./wrapper -->

    @await Html.PartialAsync("_B2SBasicScripts")

    <script>
        $(document).ready(function () {
            var mainTable;

            mainTable = $('.table').DataTable({
               "lengthChange": false,
                "info": false,
                "searching": false,
                "paging": false,
                "scrollX": false,
                "ordering": false,
                "buttons": [
                            {
                                extend: 'csv',
                                filename: '@controller-csv'
                            },
                            {
                                extend: 'pdf',
                                filename: '@controller-pdf'
                            },
                            {
                                extend: 'excel',
                                filename: '@controller-excel'
                            }
                        ],
                 "language": {
                    "emptyTable": "No data availble"
                }
            });          

            $("#btn-export-csv").on("click", function() {
                mainTable.button( '.buttons-csv' ).trigger();
            })

            $("#btn-export-excel").on("click", function() {
                mainTable.button( '.buttons-excel' ).trigger();
            })

            $("#btn-export-pdf").on("click", function() {
                mainTable.button( '.buttons-pdf' ).trigger();
            })

        });

        $('select').on('click', function (e) {
            e.stopPropagation();
        });
    </script>

    @RenderSection("Scripts", required: false)



</body>
</html>
