@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <!-- CKEDITOR -->
    <script src="~/adminlte/components/ckeditor/ckeditor.js"></script>
    <script>
        $("#templateId").ready(function () {
            let emailTemplateId = $(this).val();
            let url = "/InvoiceSetting/GetEmailTemplate";
            $.getJSON(url, { emailTemplateId: emailTemplateId }, function (data) {
                if (data != null) {
                    CKEDITOR.instances['body'].setData(data);
                } else {
                    CKEDITOR.instances['body'].setData('');
                }
            });
        })
            .change(function () {
                let emailTemplateId = $(this).val();
                let url = "/InvoiceSetting/GetEmailTemplate";
                $.getJSON(url, { emailTemplateId: emailTemplateId }, function (data) {
                    if (data != null) {
                        CKEDITOR.instances['body'].setData(data);
                    } else {
                        CKEDITOR.instances['body'].setData('');
                    }
                });
            })
    </script>
}
